@model MVC_HW_191130.Models.MoneyViewModel

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "ajaxPanel", Url = Url.Action("CreateMoney"), OnSuccess="clearAllInputBox()" }))
{
    @Html.AntiForgeryToken()
    <br>
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.類別, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.類別, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.類別, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.時間, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.時間, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.時間, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.金錢, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.金錢, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.金錢, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.備註, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.備註, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.備註, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


